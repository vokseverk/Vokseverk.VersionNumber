<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE umbPackage [
	<!ENTITY % packageInfo SYSTEM "package.ent">
	%packageInfo;
]>
<manifest>
	<propertyEditor>
		<name>&propertyEditorName;</name>
		<alias>&packageAlias;</alias>
		<icon>icon-binarycode</icon>
		<group>common</group><!-- common,lists,media,people,pickers,rich content -->
		<editor>
			<valueType>JSON</valueType><!-- STRING,DATETIME,TEXT,INT,JSON -->
			<view>&fileBaseName;.view.html</view>
		</editor>
		
		<prevalues>
			<field>
				<label>Include minor version?</label>
				<key>useMinor</key>
				<description>Determines if the version number should include the minor (2nd) digit</description>
				<view>boolean</view>
			</field>
			<field>
				<label>Include patch version?</label>
				<key>usePatch</key>
				<description>Determines if the version number should include the patch (3rd) digit. (Note: This requires the minor version to be enabled)</description>
				<view>boolean</view>
			</field>
		</prevalues>
		
		<defaultConfig>
			<useMinor>true</useMinor>
			<usePatch>false</usePatch>
		</defaultConfig>

	</propertyEditor>

	<javascript>&fileBaseName;.controller.js</javascript>
	<css>&fileBaseName;.styles.css</css>
</manifest>
